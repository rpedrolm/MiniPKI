    <header id="header" class="header fixed-top sticked" data-scrollto-offset="0">
        <div class="container-fluid d-flex align-items-center justify-content-between">

            <a href="/" class="logo d-flex align-items-center scrollto me-auto me-lg-0">
                <h1> <i class="bi bi-bullseye"></i> Mini<span>PKI</span> </h1>
            </a>
            @if( ViewBag.Session == null )
            {
                <a class="btn-getstarted scrollto" asp-controller="Home" asp-action="Index"> Inicio </a>
            }
            else
            {
                <nav id="navbar" class="navbar">
                    @{ 
                      int numItem = Convert.ToInt32( ViewData["IdApp"] );
                    }
                    <ul>
                        <li><a class="nav-link scrollto @(numItem==1? "active":"")" href="/panel"       > <span>Home</span> </a></li>
                        <li><a class="nav-link scrollto @(numItem==2? "active":"")" href="/panel/index" > Certificados Digitales </a></li>
                        @if( ViewBag.Session.IdTipo == 1 ){
                          <li><a class="nav-link scrollto @(numItem==3? "active":"")" href="/panel/caroot"> Certificados Raiz (CA) </a></li>
                        }
                        <li><a class="nav-link scrollto @(numItem==4? "active":"")" href="/panel/tutor" > Tutorial </a></li>
                    </ul>
                    <i class="bi bi-list mobile-nav-toggle d-none"></i>
                </nav><!-- .navbar -->

                <a class="btn btn-danger scrollto" asp-controller="Login" asp-action="End" style="margin-right: 50px" id="btnSess">  
                  <i class="fa fa-close"></i> Cerrar sesión 
                </a>
                <script>
                  function IsMobile() {
                      var userAgent = navigator.userAgent;
                      var mobileRegexPattern = /(android|iphone|ipad|windows phone|blackberry)/i;
                      return mobileRegexPattern.test(userAgent);
                  }
                  if( IsMobile() ) btnSess.innerHTML = "Salir";
                </script>
            }
        </div>
    </header>
    
    <!-- ======= Main ======= -->

    @RenderBody()

<!-- ======= Footer ======= -->
